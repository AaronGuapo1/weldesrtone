<body>
    <!-- NAVBAR -->
    <%- include('layouts/navbar'); -%>
    
    <section id="presentation">
<br>

        <h1 class="text-center hola">Panel de usuarios</h1>
           
        <body class="text-center">
            <br>
        <div class="center">
            Filtrar por rol:
            <form method="POST"  action="/">
            <select name="" class="form-select-center" >
                <option value="admin" Selected>Admin</option>
                <option value="Ventas" >Ventas</option>
                <option value="Proyectos" >Proyectos </option>
                <option value="Cotización" >Cotización </option>
                <option value="costumer" >Comprador </option>

              </select>
              <button type="submit" class="btn btn-info btn-sm">Filtrar</button>
              <br>
            </form>
        </div>             
        <br>


<div class="row mt-5">
    <div class="col-md-10 offset-md-1">

        <table class="table table-hover table-condensed width">
            <thead>
                <% for (var a = 0; a < usuarios.length; a++) { %>

                <tr>
                    <th style="width:20%">Nombre de usuario </th>
                    <th style="width:20%">Id del usuario </th>
                    <th style="width:20%">Rol </th>


                    
                </tr>
            </thead>        
            <tbody>


                    <tr>
                    <td> <%= usuarios[a].username%></td>
                    <td> <%= usuarios[a]._id%></td>
                    <td> 
                    
                    
    <form method="post" action="/Roles" >
        <select name="Roles" class="form-select-center">

            <% if( usuarios[a].role === 'admin' ){ %>


                <option value="admin" Selected>Admin</option>
                <option value="Ventas" >Ventas</option>
                <option value="Proyectos" >Proyectos </option>
                <option value="Cotización" >Cotización </option>
                <option value="costumer" >Comprador </option>

                
                <% } %> 
                <% if( usuarios[a].role === 'Ventas' ){ %>
    
    
                    <option value="admin" >Admin</option>
                    <option value="Ventas" Selected>Ventas</option>
                    <option value="Proyectos" >Proyectos </option>
                    <option value="Cotización" >Cotización </option>
                    <option value="costumer" >Comprador </option>
    
                    <% } %> 
                    <% if( usuarios[a].role === 'Proyectos' ){ %>
    
    
                        <option value="admin" >Admin</option>
                        <option value="Ventas" >Ventas</option>
                        <option value="Proyectos" Selected>Proyectos </option>
                        <option value="Cotización" >Cotización </option>
                        <option value="costumer" >Comprador </option>
    
                        
                        <% } %> 
            
                        <% if( usuarios[a].role === 'Cotización' ){ %>
    
    
                            <option value="admin" >Admin</option>
                            <option value="Ventas" >Ventas</option>
                            <option value="Proyectos" >Proyectos </option>
                            <option value="Cotización" Selected>Cotización </option>
                            <option value="costumer" >Comprador </option>
    
                            
                            <% } %> 
                
    
                            <% if( usuarios[a].role === 'costumer' ){ %>
    
    
                                <option value="admin" >Admin</option>
                                <option value="Ventas" >Ventas</option>
                                <option value="Proyectos" >Proyectos </option>
                                <option value="Cotización" >Cotización </option>
                                <option value="costumer"Selected>Comprador </option>
    
                                
                                <% } %> 

                            </select>
                            <input type="hidden" value="<%= usuarios[a]._id%>" name="UsuarioId">
                            <button type="submit" class="btn btn-outline-danger">Asignar Rol</button>

</form>
                    
                    
                    </td>

                </tr>

                <tr>

    <td>

        
    </td>
</tr>

            </tbody>
       
            <% } %> 

        </table>
 
    </div>
</div>

    </section>

