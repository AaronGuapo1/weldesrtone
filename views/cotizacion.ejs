<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welderstone - About</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- CSS Stylesheet-->
    <link rel="stylesheet" href="css/styles.css">
    <!-- FontAwesome-->
    <script src="https://kit.fontawesome.com/c1d78340ca.js" crossorigin="anonymous"></script>  
</head>
<body>
    <!-- NAVBAR -->
    <%- include('layouts/navbar'); -%>

    <section id="presentation">
        <div class="presentation-cont">
          <div>
            <div class="row text-center">
              <% const {ProductosComprados} = cotizaciones[0] %>
              <h1>Cotización realizada:</h1>
              <h2><%= cotizaciones[0].Fecha_compra%></h2>
            </div>
            <div class="table-responsive">
              <table class="table table-bordered">
                <thead>
                  <tr>
                    <th>Nombre del producto/s</th>
                    <th>Cotización del producto</th>
                    <th>Precio</th>
                    <th>Cantidad</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (var b = 0; b < ProductosComprados.length; b++) { %>
                  <tr>
                    <td><%=ProductosComprados[b].nombre%></td>
                    <td><a href="/cotizacionProductos?codigo=<%=ProductosComprados[b].codigo%>&amp;IdTrans=<%=cotizaciones[0].Id_transaccion%>">Ver cotización</a></td>
                    <td>$<%=ProductosComprados[b].precio%></td>
                    <td><%=ProductosComprados[b].cantidad%></td>
                  </tr>
                  <% } %>
                </tbody>
              </table>
            </div>
            <div class="row">
              <div class="col-md-6">
                <h1>Id de la transacción:</h1>
                <h2><%= cotizaciones[0].Id_transaccion%></h2>
              </div>
              <div class="col-md-6">
                <h1>Total</h1>
                <h2>$<%= cotizaciones[0].PrecioTotal%></h2>
              </div>
            </div>
            <div class="row">
              <div class="col-md-12">
                <h1 class="text-align-center">Datos del comprador:</h1>
                <h2>Nombre del comprador: <%= cotizaciones[0].NombreYApellidos%></h2>
              </div>
            </div>
            <div class="row">
              <div class="col-md-6">
                <a href="/pdfDescargar?IdTrans=<%=cotizaciones[0].Id_transaccion%>"><button type="button" class="btn btn-primary">Descargar cotizaciones</button></a>
              </div>
              <div class="col-md-6">
                <a href="/pdfDescargar?IdTrans=<%=cotizaciones[0].Id_transaccion%>"><button type="button" class="btn btn-primary">Recibir por whatsapp</button></a>
              </div>
            </div>
          </div>
        </div>
      </section>
      
    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</body>
</html>
<style>
    .text-align-center {
      text-align: center;
    }
  </style>
  <script>

    alert("¡Cotización exitosa! Un vendedor pronto se pondrá en contacto contigo")
  </script>