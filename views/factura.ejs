<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welderstone - About</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Bootstrap-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <!-- CSS Stylesheet-->
    <link rel="stylesheet" href="css/styles.css">
    <!-- FontAwesome-->
    <script src="https://kit.fontawesome.com/c1d78340ca.js" crossorigin="anonymous"></script>  
</head>
<body>
    <!-- NAVBAR -->
    <%- include('layouts/navbar'); -%>

    <section id="presentation">

  
     

    <% for (var a = 0; a < compra.length; a++) { %>
        <% const {ProductosComprados} = compra[a] %> 

        <% if( compra[a].Id_transaccion === IdTransaccion){ %>
            <div class="control-group">
                <div class="form-group floating-label-form-group controls">
                    
               
          
                    <label>Pedido realizado:    <%= compra[a].Fecha_compra%></label>

             
        </div>
    </div>

    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Productos compradros: </label>
            <br>
            <% for (var b = 0; b < ProductosComprados.length; b++) { %>
                
             <label>Nombre del producto: <%=ProductosComprados[b].nombre%></label>
         <br>
             <label>Precio: <%=ProductosComprados[b].precio%></label>
        <br>
             <label>Cantidad:  <%=ProductosComprados[b].cantidad%></label>
<br>
             <% } %> 
        </div>
    </div>
    
       
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
          Id de la transacción: <%= compra[a].Id_transaccion%>

        </div>
    </div>
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            Total del pedido: <%= compra[a].PrecioTotal%>

        </div>
    </div>
           
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            Información del pago: <br>
            <label>Nombre del comprador: <%= compra[a].Nombre_comprador%> <%= compra[a].Apellidos_comprador%></label>
        </div>
    </div>
           
    <div class="control-group">
        <div class="form-group floating-label-form-group controls">
            <label>Correo del comprador: <%= compra[a].Correo_comprador%></label>
        </div>
    </div>
    <a href="/pdfDescargar?IdTrans=<%=compra[a].Id_transaccion%>">Descargar pdf</a>

            <% } %> 

        <% } %> 


    </section>




    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>

</body>
</html>
