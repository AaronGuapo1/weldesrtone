    <body>
        <%- include('layouts/navbar'); -%> 

        <section id="tienda-filtros">


            <div class="row mt-4 px-5" style="padding-bottom: .8rem;">
                <!-- Link de Hogar -->
                <% if(filtro == "hogar"){ %>
                    <div style="border-top-left-radius: .375rem; border-bottom-left-radius: .375rem; position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red filter-selected">
                        <a class="filter-format-selected stretched-link" href="#">Hogar</a>
                    </div>
                <% } else { %>
                    <div style="border-top-left-radius: .375rem; border-bottom-left-radius: .375rem; position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red" style="position: relative;">
                        <a class="filter-format stretched-link" href="/tienda/busqueda/hogar">Hogar</a>
                    </div>
                <% } %>
                <!-- Link de Industria -->
                <% if(filtro == "industria"){ %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red filter-selected">
                        <a class="filter-format-selected stretched-link" href="#">Industria</a>
                    </div>
                <% } else { %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red">
                        <a class="filter-format stretched-link" href="/tienda/busqueda/industria">Industria</a>
                    </div>
                <% } %>
                <!-- Link de Urbanismo -->
                <% if(filtro == "urbanismo"){ %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red filter-selected">
                        <a class="filter-format-selected stretched-link" href="#">Urbanismo</a>
                    </div>
                <% } else { %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red">
                        <a class="filter-format stretched-link" href="/tienda/busqueda/urbanismo">Urbanismo</a>
                    </div>
                <% } %>
                <!-- Link de Ganadero -->
                <% if(filtro == "ganadero"){ %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red filter-selected">
                        <a class="filter-format-selected stretched-link" href="/tienda/busqueda/ganadero">Ganadero</a>
                    </div>
                <% } else { %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red">
                        <a class="filter-format stretched-link" href="/tienda/busqueda/ganadero">Ganadero</a>
                    </div>
                <% } %>
                <!-- Link de Contruccion y reciclados -->
                <% if(filtro == "construccion y reciclados"){ %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red filter-selected">
                        <a class="filter-format-selected stretched-link" href="/tienda/busqueda/construccion-y-reciclados" data-bs-toggle="tooltip" data-bs-title="Construccion y reciclados">Construccion y reciclados</a>
                    </div>
                <% } else { %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all rb-red">
                        <a class="filter-format stretched-link" href="/tienda/busqueda/construccion-y-reciclados" data-bs-toggle="tooltip" data-bs-title="Construccion y reciclados">Construccion y reciclados</a>
                    </div>
                <% } %>
                <!-- Link de Especiales -->
                <% if(filtro == "especiales"){ %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all final-filter filter-selected">
                        <a class="filter-format-selected stretched-link" href="/tienda/busqueda/especiales">Especiales</a>
                    </div>
                <% } else { %>
                    <div style="position: relative;" class="col-2 col-xl-1 text-truncate center-all final-filter    ">
                        <a class="filter-format stretched-link" href="/tienda/busqueda/especiales">Especiales</a>
                    </div>
                <% } %>
                <div class="col-12 col-xl-6 mt-xl-1rem">
                    <form action="/tienda/busqueda" method="post">
                        <div class="input-group">
                            <input type="text" name="busqueda" class="form-control busquedaInput" placeholder="Busca aqui lo que necesites">
                            <button class="btn btn-outline-danger" type="submit">Limpiar</button>
                            <button type="submit" class="btn btn-outline-danger"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </section>

        <hr class="border border-danger w-75" style="margin: .8rem auto 1.6rem auto;">

        <section id="tienda-productos">
            <div class="row">
                <% for (var a = 0; a < productos.length; a++) { %> 
                    <div class="col-sm-2">
                        <a href="/productos/<%=productos[a]._id%>">
                            <div class="card line">
                                <!-- Imagen -->
                                <img class="card-img-top mx-auto d-block" src="<%=productos[a].image%>" alt="Product 1">
                                <!-- Cuerpo de la card -->
                                <div class="card-body">
                                    <!-- Nombre del producto -->
                                    <h4 class="card-title"><%=productos[a].nombre%> </h4>
                                    <form action="/products-cart" method="POST">
                                        <!-- Precio -->
                                        <input type="hidden" name="nombre" value="<%=productos[a].nombre%>">
                                        <input type="hidden" name="image" value="<%=productos[a].image%>">
                                        <input type="hidden" name="precio" value="<%=productos[a].precio%>">
                                        <% if(loggedIn) { %>
                                            <input type="hidden" name="UsuarioId" value="<%=IdUsuario%>"> 
                                        <% } %>
                                        
                                        <p class="card-text">Precio: <span class="price">$<%= productos[a].precio.toFixed(2).toString().replace(/\B(?=(\d{3})+(?!\d))/g, ',') %></span></p>
                                        <% if(loggedIn) { %>

                                      


   
                                            <button type="submit" class="btn btn-danger w-100 edit" id="<%=productos[a].nombre%>"><i class="fa-solid fa-cart-shopping me-2 edit"></i>
                                                

                                       

                                      
                                                    <% for (let b = 0; b < cart.length; b++) { %>

                                                <% if( cart[b].nombre === productos[a].nombre && cart[b].UsuarioId === IdUsuario){ %> 
                                            
                                                     Agregado
                                            
                                                <% } else { %>

                                                    <% } %>
                                                    <% } %>

                                            


                                        </button>

                                             
                                     
                <% } %>


                                    </form>
                             

                                </div>
                            </div>
                        </a>
                    </div>




                <% } %>
               
            </div>

        </section>

        <button id="whatsapp-btn" class="center-text-xy"><i class="fab fa-whatsapp"></i><span>+1234567890</span></button>

        <!-- Bootstrap core JS-->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
        <script>
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]')
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl))
        </script>
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
      <script src="/js/tiendaHide.js"></script>
      <!-- FontAwesome-->
      <script src="https://kit.fontawesome.com/360b0549be.js" crossorigin="anonymous"></script>
      <script src="/js/whatsapp-btn.js"></script>

         </body>
       </html>



